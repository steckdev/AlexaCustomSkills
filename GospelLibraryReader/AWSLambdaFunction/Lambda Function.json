function trimNumbers(book) 
{ 
   if(!isNaN(book.charAt(0))) 
   { 
       if(book.indexOf('1st') > -1 || book.indexOf('2nd') > -1 || book.indexOf('3rd') > -1 || book.indexOf('4th') > -1) 
           book = book.slice(0,1) + book.slice(3, book.length); 
   } 
   return book 
} 
